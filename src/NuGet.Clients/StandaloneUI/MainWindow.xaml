<Window x:Class="StandaloneUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Closed="Window_Closed">
    <Grid Name="layoutGrid">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="1" BorderThickness="0,1,0,0" BorderBrush="Black">
            <ScrollViewer Grid.Row="1" x:Name="_scrollViewer" >
                <TextBox x:Name="_textBox" AcceptsReturn="True"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
